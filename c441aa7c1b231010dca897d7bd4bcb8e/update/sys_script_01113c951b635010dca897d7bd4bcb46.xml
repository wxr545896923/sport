        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	// Add your code here
	//获取人均消费金额
	var renjun = current.money_of_person;
	//创建记录——赛程
	var record = new GlideRecord('x_532560_sport_record');
	//查询和当前赛程名称相同的数据
	record.addQuery('sys_id',"=",current.game_name);
	//开始查询
	record.query();
	//循环查询结果
	while(record.next()){
		//获取赛程参与人员列表并循环
		for(var i = 0; i <record.game_persons.split(',').length;i++){
			//获取赛程参与人员ID
			var psSysId = record.game_persons.split(',')[i];
			//查询赛程参与人员信息
			var user = new GlideRecord('x_532560_sport_user');
			user.addQuery('sys_id','=',psSysId);
			user.query();
			//循环赛程参与人员并且修改其剩余金额
			while(user.next()){
				var amount = user.amount;
				user.amount = parseFloat(amount) - parseFloat(renjun);
				user.update();
			}
		}
		
	}
})(current, previous);]]></script>
